@model MaestroDetalleFJCO20241103.Models.Computadora

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Computadora</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Marca" class="control-label"></label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
    </div>
    <div class="row row-cols-md-12">
        @await Html.PartialAsync("_DetCom", Model.Componente)
    </div>
    <div class="row">
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Cancelar</a>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
